{% extends 'layout.twig' %}

{% block body %}
<body onload="abrirTabla()">    

        <div class="container-fluid">
            <div class="row header-laliga text-center py-3 px-5">           
                <img class="img-header" src="/images/laliga.png">
                <h3 class="text-white my-auto" id="txt-header"> No es futbol. Es LaLiga</h3>
            </div>
        </div>
      <div class="container-fluid bg-danger">
            <div class="container">
                <div class = "row justify-content-start bg-danger">
                    <nav class="navbar navbar-dark navbar-expand-md">
                        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarText" aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                        <div class="collapse navbar-collapse" id="navbarText">
                            <ul id="navbar" class="nav navbar-nav">
                                <li class="nav-item">
                                    <a class="nav-link" href="/">Inicio</a>
                                </li>
                                <li class="nav-item">
                                    <a id="btn_clasificacion" class="nav-link active" href="/posiciones">Clasificación</a>
                                </li>
                                <li class="nav-item">
                                    <a id="btn_calendario" class="nav-link" href="/fechas">Calendario</a>
                                </li>
                                <li class="nav-item">
                                    <a id="btn_equipo" class="nav-link" href="/equipos">Equipos</a>
                                </li>
                                <li class="nav-item">
                                    <a id="btn_calendario" class="nav-link" href="/estadisticas">Estadísticas</a>
                                </li>

                                {% if user.editor %}
                                <li class="nav-item">
                                    <a id="btn_mundial" class="nav-link" href="/editorNoticias">Noticias</a>
                                </li>
                                {% endif %}
                                
                                <li class="nav-item">
                                    <a id="btn-estilo" class="nav-link" onclick="cambiarEstilo();"><span class="oi oi-brush"></span>Cambiar Estilo</a>
                                </li>
                                 {% if user %}
                                  <li class="nav-item">
                                    <a class="nav-link text-warning"><span class="oi oi-person"></span>&ensp;{{user.google.name}}</a>
                                  </li>
                                  <li class="nav-item">
                                    <a href="/auth/logout" class="btn btn-warning"><span class="fa fa-google-plus"></span>Cerrar Sesión</a>
                                  <li>  
                                {% endif %}       
                            </ul>
                        </div>
                    </nav>
                </div>
            </div>
        </div>
         
        <div class="container">
            <div id="tabla_posicion_completa" class="text-center mt-3 text-dark">
                <h4> Tabla de Posiciones </h4>
                <table class="table center tabla-grande table-responsive-xs table-hover tabla-laliga mt-3">
                    <thead class="thead-dark">
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Club</th>
                            <th scope="col">PJ</th>
                            <th scope="col">PG</th>
                            <th scope="col">PE</th>
                            <th scope="col">PP</th>
                            <th scope="col">PTS</th>
                            <th scope="col">GF</th>
                            <th scope="col">GC</th>
                            <th scope="col">DG</th>

                        </tr>
                    </thead>
                    <tbody id="tabla_pos_completa"></tbody>
                </table>
            </div>
        </div>

{% endblock %}

{% block scripts %}

    <script src='/javascripts/iaw-p0.js'></script>
    <script src='/javascripts/iaw-p0-equipos.js'></script>

{% endblock %}