{% extends 'layout.twig' %}

{% block body %}
    <body onload="buscarEstadisticas();">    

        <div class="container-fluid">
            <div class="row header-laliga text-center py-3 px-5">           
                <img class="img-header" src="/images/laliga.png">
                <h3 class="text-white my-auto" id="txt-header"> No es futbol. Es LaLiga</h3>
            </div>
        </div>
        <div class="container-fluid bg-danger">
            <div class="container">
                <div class = "row justify-content-start bg-danger">
                    <nav class="navbar navbar-dark navbar-expand-md">
                        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarText" aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                        <div class="collapse navbar-collapse" id="navbarText">
                            <ul id="navbar" class="nav navbar-nav">
                                <li class="nav-item">
                                    <a class="nav-link" href="/">Inicio</a>
                                </li>
                                <li class="nav-item">
                                    <a id="btn_clasificacion" class="nav-link" href="/posiciones">Clasificación</a>
                                </li>
                                <li class="nav-item">
                                    <a id="btn_calendario" class="nav-link" href="/fechas">Calendario</a>
                                </li>
                                <li class="nav-item">
                                    <a id="btn_calendario" class="nav-link active" href="/estadisticas">Estadísticas</a>
                                </li>
                                <li class="nav-item">
                                    <a id="btn_equipo" class="nav-link" href="/equipos">Equipos</a>
                                </li>
                                <li class="nav-item">
                                    <a id="btn-estilo" class="nav-link" onclick="cambiarEstilo();"><span class="oi oi-brush"></span>Cambiar Estilo</a>
                                </li>
                                {% if user %}
                                  <li class="nav-item">
                                    <a class="nav-link text-warning"><span class="oi oi-person"></span>&ensp;{{user.google.name}}</a>
                                  </li>
                                  <li class="nav-item">
                                    <a href="/auth/logout" class="btn btn-warning"><span class="fa fa-google-plus"></span>Cerrar Sesión</a>
                                  <li>  
                                {% endif %}   
                            </ul>
                        </div>
                    </nav>
                </div>
            </div>
        </div>

        <div class="container text-dark ">
            <h4 class="text-center mt-3"> Estadísticas Individuales</h4>
            <div class="row justify-content-center text-left mb-3 mt-4">               
                <div class="col-lg-3"> 
                    <table id="tabla_goleadores" class="table tabla-grande table-responsive-xs table-hover">
                        <tbody></tbody>
                    </table>
                </div>
                <div class="col-lg-3"> 
                    <table id="tabla_asistencias" class="table tabla-grande table-responsive-xs table-hover">
                        <tbody></tbody>
                    </table>
                </div>
                <div class="col-lg-3"> 
                    <table id="tabla_amarillas" class="table tabla-grande table-responsive-xs table-hover"> 
                        <tbody></tbody>

                    </table>
                </div>
                <div class="col-lg-3"> 
                    <table id="tabla_rojas" class="table tabla-grande table-responsive-xs table-hover">  
                        <tbody></tbody>

                    </table>
                </div>
            </div>
        </div>

        <div class="container  text-dark">
            <h4 class="text-center mt-3"> Estadísticas por Equipo</h4>
            <div class="row justify-content-center text-left mb-3 mt-4">               
                <div class="col-lg-4"> 
                    <table id="tabla_gf_equipo" class="table tabla-grande table-responsive-xs table-hover">
                        <tbody></tbody>

                    </table>
                </div>
                <div class="col-lg-4"> 
                    <table id="tabla_gc_equipo" class="table tabla-grande table-responsive-xs table-hover">
                        <tbody></tbody>
                    </table>
                </div>
                <div class="col-lg-4"> 
                    <table id="tabla_promedio_gol" class="table tabla-grande table-responsive-xs table-hover">
                        <tbody></tbody>
                    </table>
                </div>

            </div>
        </div>
{% endblock %}        