{% extends 'layout.twig' %}

{% block body %}
    <body onload="abrirIndex()">    

        <div class="container-fluid">
            <div class="row header-laliga text-center py-3 px-5">           
                <img class="img-header" src="/images/laliga.png">
                <h3 class="text-white my-auto" id="txt-header"> No es futbol. Es LaLiga</h3>
            </div>
        </div>
         <div class="container-fluid bg-danger">
            <div class="container">
                <div class = "row justify-content-start bg-danger">
                    <nav class="navbar navbar-dark navbar-expand-md">
                        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarText" aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                        <div class="collapse navbar-collapse" id="navbarText">
                            <ul id="navbar" class="nav navbar-nav">
                                <li class="nav-item">
                                    <a class="nav-link active" href="/">Inicio</a>
                                </li>
                                <li class="nav-item">
                                    <a id="btn_clasificacion" class="nav-link" href="/posiciones">Clasificación</a>
                                </li>
                                <li class="nav-item">
                                    <a id="btn_calendario" class="nav-link" href="/fechas">Calendario</a>
                                </li>
                                <li class="nav-item">
                                    <a id="btn_calendario" class="nav-link" href="/estadisticas">Estadísticas</a>
                                </li>
                                <li class="nav-item">
                                    <a id="btn_equipo" class="nav-link" href="/equipos">Equipos</a>
                                </li>
                                <li class="nav-item">
                                    <a id="btn-estilo" class="nav-link" onclick="cambiarEstilo();"><span class="oi oi-brush"></span>Cambiar Estilo</a>
                                </li>
                                {% if user %}
                                  <li class="nav-item">
                                    <a id=""class="nav-link text-warning"><span class="oi oi-person"></span>&ensp;{{user.google.name}}</a>
                                  </li>
                                  <li class="nav-item">
                                    <a href="/auth/logout" class="btn btn-warning"><span class="fa fa-google-plus"></span>Cerrar Sesión</a>
                                  <li>  
                                {% else %}
                                  <li class="nav-item">
                                    <a href="/auth/google" class="btn btn-warning"><span class="fa fa-google-plus"></span>Iniciar sesión con Google</a>
                                  </li>  
                                {% endif %}                          
                                      

                            </ul>
                        </div>
                    </nav>
                </div>
            </div>
        </div>
       
        <div class="container">
            <div class="row" >
                <!-- Tabla de posiciones del lado izquierdo-->
                <div class="col-lg-3 bg-white text-center text-dark border pt-2" id="c1">
                    <div class="py-0">
                        <h5 class="display-6 mt-2">Tabla de Posiciones</h5>
                        <table id="tabla_posiciones" class="table tabla-grande table-responsive-xs table-hover text-left">
                            <thead class="thead-dark"><tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Club</th>
                                    <th scope="col">Ptos</th>
                                    <th scope="col">PJ</th>
                                    <th scope="col">DG</th>
                                    <th scope="col"></th>
                                </tr></thead>
                            <tbody id="tabla_pos"></tbody>
                        </table>
                        <div class="py-2 px-2 border-top ">
                            <a  href="/posiciones" class="btn btn-dark btn-block">Ver Tabla Completa</a>
                        </div>
                    </div>
                </div>

                <!-- Carousel -->

                <div class="col-lg-6 border pt-2" id="c2">  

                    <div class="col my-0 py-1 text-center">
                        <h5 class="display-6">Noticias de La Liga</h5>
                    </div>

                    <div id="carousel-noticias" class="carousel slide px-3" data-ride="carousel">

                        <ol class="carousel-indicators" id="carousel-slide">                            
                        </ol>

                        <div class="carousel-inner" id="carousel-inn">                          
                        </div>

                        <a class="carousel-control-prev" href="#carousel-noticias" role="button" data-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="sr-only">Anterior</span>
                        </a>

                        <a class="carousel-control-next" href="#carousel-noticias" role="button" data-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="sr-only">Siguiente</span>
                        </a>
                    </div>

                    <!-- Noticias -->
                    <div class="container">
                        <div class="row mt-3" id="noticias-sec">

                        </div>

                    </div>
                </div>

                <!-- Calendario -->

                <div class="col-lg-3 bg-white text-center text-dark border" id="c3">
                    <div class="my-2 py-0 pt-2">
                        <h5 id="num-jornada" class="display-6"></h5>
                        <table class="table tabla-grande table-responsive-xs table-hover" id="table-calendar">
                            <tbody id="calendario"></tbody>
                        </table>
                    </div>
                    <a class="btn btn-dark btn-block" href="/fechas">Ver Calendario Completo</a>

                </div>

            </div>
        </div>

      
{% endblock %}